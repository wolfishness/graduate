<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.md.goods.dao.ProductMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.md.goods.model.Product"  >
		<id  column="id" property="id"  />
		<result column="goodsId" property="goodsId" />
		<result column="name" property="name" />
		<result column="weight" property="weight" />
		<result column="marketPrice" property="marketPrice" />
		<result column="price" property="price" />
		<result column="image" property="image" />
		<result column="goodsCode" property="goodsCode" />
		<result column="goodsSize" property="goodsSize" />
	</resultMap>
	
	<select id="findColorsNum" resultType="int">
		SELECT COUNT(DISTINCT(`name`)) FROM shop_product where goodsId = #{goodsId} 
	</select>
</mapper>
